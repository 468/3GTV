<body>
  <div id='splashscreen'><img src="./assets/img/logo.png" id="splashscreen_logo" alt="3GTV logo"></div>
  
  <video loop autoplay id="bgvid"></video>

  <script>
  var randomvideonumber = Math.floor(Math.random() * 3) + 1   ;
  console.log('playing video ' + randomvideonumber);
  $('#bgvid').html('<source src="./assets/video/bg' + randomvideonumber+'_lq.mp4" type="video/mp4" >')
  </script>

  <div id='logo_container'>
    <img src='./assets/img/logo.png' id='site_logo' alt='3GTV' class="no_highlight" />
